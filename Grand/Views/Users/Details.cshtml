@using Grand.Views.ViewModels
@model UserViewModel

@{
    ViewData["Title"] = "User Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/responsive.css">
</head>
<body>
    <!-- Header -->
    <header id="header-wrap">
        <nav class="navbar navbar-expand-lg fixed-top scrolling-navbar">
            <div class="container">
                <a class="navbar-brand" href="index.html"><img src="~/assets/img/logo.png" alt="Logo"></a>
            </div>
        </nav>
    </header>

    <!-- Details Section -->
    <section class="section-padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <h1 class="section-title">User Details</h1>
                    <hr class="mb-4">
                    <dl class="row text-start">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LastName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.RegisterDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.RegisterDate)</dd>
                    </dl>
                    <a href="@Url.Action("Index", "Home", new { area = "User" })" class="btn btn-common mt-3">بازگشت</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container text-center mt-5">
            <p>© 2024 Grand Application. All Rights Reserved.</p>
        </div>
    </footer>
</body>
</html>
