@using Grand.Views.ViewModels
@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/main.css">
</head>
<body>
    <header id="header-wrap">
        <nav class="navbar navbar-expand-lg fixed-top scrolling-navbar">
            <div class="container">
                <a class="navbar-brand" href="index.html"><img src="~/assets/img/logo.png" alt="Logo"></a>
            </div>
        </nav>
    </header>
    <div class="page-background">
        <img src="~/assets/img/OIP.jpeg" alt="SignIn Background">
    </div>
    <section class="section-padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    @if(TempData["Suspended"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Suspended"]</div>
                    }
                    <h1 class="section-title">Sign in</h1>
                    <form asp-action="SignIn">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label text-white"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label text-white"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div>
                            <input type="checkbox" asp-for="RememberMe" />
                            <label asp-for="RememberMe" class="text-white"></label>
                        </div>
                        <div class="form-group mt-2">
                            <input type="submit" value="Sign In" class="btn btn-common" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>


